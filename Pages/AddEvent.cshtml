@page
@model AddEventModel
@{
  ViewData["Title"] = $"Gaußwoche {DateTime.Now.Year}";
}

<div style="display: flex; flex-direction: column;">
<form>
  <label for="name">Name:</label>
  <input type="text" class="form-control" id="name" name="name" maxlength="32" required>

  <label for="description">Description:</label>
  <input type="text" class="form-control" id="description" name="description" maxlength="128" required>

  <label for="date">Date:</label>
  <select class="form-select" id="date" name="date" required>
    <option value="">Select a date</option>
    <option value="Monday">Monday</option>
    <option value="Tuesday">Tuesday</option>
    <option value="Wednesday">Wednesday</option>
    <option value="Thursday">Thursday</option>
    <option value="Friday">Friday</option>
  </select>

  <label for="room">Raum:</label>
  <select class="form-select" id="room" name="room" required>
    <option value="">Raum Auswählen</option>
    <option value="SPORT">Sporthalle</option>
    <option value="UG13">UG 13</option>
    <option value="UG14">UG 14</option>
    <option value="UG15">UG 15</option>
    <option value="UG16">UG 16</option>
    <option value="UG17">UG 17</option>
    <option value="UG18">UG 18</option>
    <option value="UG19">UG 19</option>
    <option value="UG20">UG 20</option>
    <option value="UG21">UG 21</option>
    <option value="UG22">UG 22</option>
    <option value="UG23">UG 23</option>
    <option value="UG24">UG 24</option>
    <option value="UG25">UG 25</option>
    <option value="UG26">UG 26</option>
    <option value="UG27">UG 27</option>
    <option value="UG28">UG 28</option>
    <option value="UG29">UG 29</option>
    <option value="UG30">UG 30</option>
    <option value="UG31">UG 31</option>
    <option value="UG32">UG 32</option>
    <option value="UG33">UG 33</option>
    <option value="UG34">UG 34</option>
    <option value="UG35">UG 35</option>
  </select>

  <label for="picture">Picture:</label>
  <input type="file" class="form-control" id="picture" name="picture" accept="image/*">

  <label for="capacity">Capacity:</label>
  <input type="number" class="form-control" id="capacity" name="capacity" required>

  <label for="duration">Duration:</label>
  <select class="form-select" id="duration" name="duration" required>
    <option value="">Select a duration</option>
    <option value="1">1 hour</option>
    <option value="2">2 hours</option>
    <option value="3">3 hours</option>
  </select>

  <label for="grades">Grades:</label>
  <input type="checkbox" class="form-check-input" id="grade1" name="grades" value="Grade 1">
  <label for="grade1">Grade 1</label>
  <input type="checkbox" class="form-check-input" id="grade2" name="grades" value="Grade 2">
  <label for="grade2">Grade 2</label>
  <input type="checkbox" class="form-check-input" id="grade3" name="grades" value="Grade 3">
  <label for="grade3">Grade 3</label>
  <br>
  <label for="notes">Notes:</label>
  <input type="text" class="form-control" id="notes" name="notes" maxlength="32">
  <div class="d-grid gap-2">
    <input type="submit" class="btn btn-success" value="Submit">
  </div>
</form>
</div>