@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger text-center">Etwas ist schiefgelaufen :(</h1>
<hr>

<h3 class="text-center"><a class="text-success" href="/">Home</a></h3>
@if (Model.ShowRequestId)
{
    <p style="text-align: center;">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
        <br>
        <strong>HTTP Methode:</strong> <code>@Request.Method.ToString()</code>
        <br>
        <strong>Authentifiziert:</strong> <code>@Request.HttpContext.User.Identity!.IsAuthenticated.ToString()</code>
        <br>
        <strong>User-Agent:</strong> <code>@Request.Headers["User-Agent"].ToString()</code>
        <strong>Datum:</strong> <code>@DateTime.Now.ToString("yyyy-MM-dd-THH:mm:sszz")</code>
    </p>
}